<p id="notice"><%= notice %></p>

<h1>Listing staff</h1>

<table>
  <thead>
    <tr>
      <th>Staff name</th>
      <th>Staff namekana</th>
      <th>Staff age</th>
      <th>Staff sex</th>
      <th>Staff email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.staff_name %></td>
        <td><%= staff.staff_namekana %></td>
        <td><%= staff.staff_age %></td>
        <td><%= staff.staff_sex %></td>
        <td><%= staff.staff_email %></td>
        <td><%= link_to 'Show', staff_customer_path(staff) %></td>
        <td><%= link_to 'Edit', edit_staff_customer_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

